<%- include partials/head.ejs %>
<header>
    <form action="/" method="POST">
        <label for="input">
                 Input item to to do list
        </label>
        <input aria-labelledby="input" id="input" type="text" name="listItem" autofocus>
        <button class="button-add" type="submit">Add</button>
    </form>
</header>

<main>
    <ul>
        <%if(items.length != 0){%>
       <% items.forEach(function(i){%>
            <li draggable="true">
                <span class="item-text"><%=i.item%></span>
                <form action="/delete" method="POST">
                    <button class="button-delete" type="submit" name="delete" value="<%=i.id%>">Delete</button>
                </form>
            </li>
       <%})}%>
    </ul>

    <ul class="drop-zone"></ul>

</main>
<%- include partials/tail.ejs %>